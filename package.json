{
  "name": "athena-bot",
  "description": "Athena bot Prod Environment",
  "version": "0.1.1",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "test-integration": "casperjs test ./test/integration/test.*.js",
    "test-integration-runner": "NODE_ENV=test node casper-runner.js",
    "test": "npm run lint && npm run test-integration-runner",
    "test-unit": "jest test/unit --coverage",
    "lint": "eslint .",
    "autofix": "eslint --fix .",
    "codecov": "npm run test && (codecov || true)",
    "travis-test": "jest --verbose --coverage",
    "dev": " nodemon src/server.js ",
    "clean": "yarn cache clean && yarn install",
    "format": "prettier --write \"**/*.{js,md}\"",
    "format:diff": "prettier --list-different \"**/*.{js,md}\"",
    "format:staged": "prettier --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/watson-developer-cloud/assistant-simple.git"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "body-parser": "^1.18.3",
    "dotenv": "^6.2.0",
    "express": "^4.17.3",
    "ibm-watson": "^4.2.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "engines": {
    "node": ">=8.15.0"
  },
  "engineStrict": true,
  "devDependencies": {
    "nodemon": "^2.0.2",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.17.0",
    "babel-eslint": "^10.0.1",
    "casperjs": "^1.1.4",
    "codecov": "^3.2.0",
    "eslint": "^5.14.0",
    "jest": "^24.1.0",
    "phantomjs-prebuilt": "^2.1.16",
    "supertest": "^3.4.2"
  },
  "bugs": {
    "url": "https://github.com/watson-developer-cloud/assistant-simple/issues"
  },
  "homepage": "https://github.com/watson-developer-cloud/assistant-simple#readme",
  "directories": {
    "test": "test"
  },
  "author": "",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "jsxBracketSameLine": true,
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "lint-staged": {
    "*.js": [
      "yarn format:staged",
      "git add"
    ],
    "*.md": [
      "yarn format:staged",
      "git add"
    ]
  }
}
